<% if user_signed_in? %>
  <div class="col-md-6">
    <h4>Add a review:</h4>
    <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
      <p>
        <%= f.label(:body, "Comments") %><br>
        <%= f.text_area(:body, class: "form-control") %>
      </p>
      <p>
        <div class="rating"></div>
      </p>  
      <p>
        <%= f.submit("Submit", class: "btn btn-default") %>
      </p>
    <% end %>
  </div>
<% else %>

<div class="col-md-6">
  <p>Please <%= link_to "sign in", new_user_session_path %> to leave a comment on this product</p>

</div>

<% end %>