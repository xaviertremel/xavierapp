
<div class="row">
  <% if product.errors.any? %>
    <div id="alert" class="alert alert-danger">
      <h4><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h4>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
</div>

<div class="row">

<%= form_for(product) do |f| %>

  <div class="input-group">
    <%= f.label(:name, "Name:", class: "input-group-addon") %>
    <%= f.text_field(:name, class: "form-control") %>
  </div>

  </br>

  <div class="input-group">
    <%= f.label(:description, "Description:", class: "input-group-addon") %>
    <%= f.text_area(:description, class: "form-control") %>
  </div>

  </br>

  <div class="input-group">
    <%= f.label(:image_url, "Image URL:", class: "input-group-addon") %>
    <%= f.text_field(:image_url, class: "form-control") %>
  </div>

  </br>

  <div class="input-group">
    <%= f.label(:colour, "Colour:", class: "input-group-addon") %>
    <%= f.text_field(:colour, class: "form-control") %>
  </div>

  </br>

  <div class="input-group">
    <%= f.label(:price, "Price:", class: "input-group-addon") %>
    <%= f.number_field(:price_cents, class: "form-control") %>
  </div>

  </br>

  <div class="actions">
    <%= f.submit("Submit", class: "btn btn-default") %>
  </div>

  </br>
  </br>

<% end %>

</div>
