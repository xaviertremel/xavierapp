<div class="container page-wrap">    
  <div class="content-container">
    <p id="notice"><%= notice %></p>
    <div class="row">
      <div class="header">  
        <h1>Products</h1>
      </div>
        <table>
          <thead>
            <tr class="row">
              <th class="col-md-4" style="text-align:center"><h3>Name</h3></th>
              <th class="col-md-4" style="text-align:center"><h3>Description</h3></th>
              <th class="col-md-4" style="text-align:center"><h3>Photo</h3></th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @products.each do |product| %>
              <tr class="row">
                <td class="col-md-4"><%= product.name %></td>
                <td class="col-md-4"><%= product.description %></td>
                <td class="col-md-4" style="padding:10px"><img src=<%= product.image_url %> class="img-responsive img-rounded"/></td>
                <td><%= link_to 'Show', product %></td>
                <td><%= link_to 'Edit', edit_product_path(product) %></td>
                <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Product', new_product_path %>
    </div>
  </div>
</div>
