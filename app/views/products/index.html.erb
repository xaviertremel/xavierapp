<div class="container page-wrap">    
  <div class="content-container">
    <p id="notice"><%= notice %></p>
    <div class="row">
      <div class="header">  
        <h1>Products</h1>
      </div>
       <div class="container-flex">

        <%= render @products %>

        </div>
        
        <%= will_paginate @products %>

      </div>

      <% if user_signed_in? %>
      <%= link_to 'Create a new product', new_product_path %>
      <% end %>
  </div>
</div>
