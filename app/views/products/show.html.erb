

<div class="container page-wrap">    
  <div class="content-container">
    <div class="row">
      <div class="header">  
        <h1><%= @product.name %></h1>
        <br/>
       </div>
    </div>

    <div class="row">
      <div class="col-md-8">
        <div class="col-md-6">
          <h4>Description:</h4>
          <%= @product.description %>
        </div>
        <div class="col-md-6">
          <h4>Colour:</h4>
          <%= @product.colour %>
        </div>
        <div class="col-md-6">
          <h4>Average rating:</h4>
          <div class="rated" data-score="<%= @product.average_rating %>"></div>
        </div>
        <div class="col-md-6">
          <h4>Price:</h4>
          <% unless @product.price.nil? || @product.price == 0 %>
          <%= @product.price/100 %>â‚¬
          <% end %>
        </div>
        <div class="col-md-6">
          <br/>
          <%= form_tag "/payments/create" do %>
          <%= render partial: "shared/stripe_checkout_button" %>
          <% end %>

        </div>           
        <div class="col-md-12">
          <br/>
        </div>
      </div>


      <div class="col-md-4">
        <%= image_tag(@product.image_url, :class => "img-responsive img-rounded", :style => 'min-width:230px') %>
      </div>


      <div class="col-md-8">

        <% if !Comment.where("product_id = ?", @product.id).empty? %>
        <div class="col-md-12">
          <h4>Customer reviews:</h4>
        </div>

        <div class="product-reviews">

          <%= render @comments %>
          <%= will_paginate @comments %>

        </div>

        <% end %>

        <%= render "called_new_comment" %>

      </div>

    </div>

    <div class="row">

        <br/>
        <br/>
        <% if user_signed_in? %>
        <%= link_to 'Edit product', edit_product_path(@product), class: "btn btn-default" %>
        <% end %>

				<%= link_to 'Back', products_path, class: "btn btn-default" %>

    </div>

    </div>
  </div>
</div>
