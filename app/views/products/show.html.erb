

<div class="container page-wrap">    
  <div class="content-container">
    <p id="notice"><%= notice %></p>
    <div class="row">
      <div class="header">  
        <h1><%= @product.name %></h1>
       </div>

 				<table>
          <thead>
            <tr class="row">
              <th class="col-md-4" style="text-align:center"><h3>Description</h3></th>
              <th class="col-md-4" style="text-align:center"><h3>Photo</h3></th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
              <tr class="row">
                <td class="col-md-4"><%= @product.description %></td>
                <td class="col-md-4"><img src=<%= @product.image_url %> class="img-responsive img-rounded"/></td>
              </tr>
          </tbody>
        </table>

        <%= link_to 'Edit', edit_product_path(@product) %> |
				<%= link_to 'Back', products_path %>

    </div>
  </div>
</div>
