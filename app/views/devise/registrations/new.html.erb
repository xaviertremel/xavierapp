<div class="signform">


<h2 style="margin-left:14px">Sign up</h2>
</br>



<%= form_for(resource, class: "form-horizontal", as: resource_name, url: registration_path(resource_name)) do |f| %>

  <%= devise_error_messages! %>

  <div class="form-group">
    <div class="col-md-4">
    <%= f.label(:email, class: "control-label", for: "inputEmail3") %>
    </div>
    <div class="col-md-8">
    <%= f.email_field(:email, autofocus: true, class: "form-control", placeholder: "Email", id: "inputEmail3") %>
    </div>
  </div>

  <br />
  <br />

  <div class="form-group">
    <div class="col-md-4">
    <%= f.label(:password, class: "control-label", for: "inputPassword3") %>
    </div>
    <div class="col-md-8">
    <%= f.password_field(:password, autocomplete: "off", class: "form-control", placeholder: "Password", id: "inputPassword3") %>
      <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    </div>
  </div>

  </br>
  </br>
  </br>

  <div class="form-group">
    <div class="col-md-4">
    <%= f.label(:password_confirmation, class: "control-label", for: "inputPassword3") %>
    </div>
    <div class="col-md-8">
    <%= f.password_field(:password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password", id: "inputPassword3") %>
    </div>
  </div>

  </br>
  </br>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit("Sign up", class: "btn btn-default") %>
    </div>
  </div>

<% end %>

</br>


<%= render "devise/shared/links" %>

</div>