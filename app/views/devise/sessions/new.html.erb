<div class="signform">

<% if URI(request.referer).path.include? '/products' %>

  <h2 style="margin-left:14px">Please log in to buy</h2>
</br>

<% else %>

  <h2 style="margin-left:14px">Log in</h2>
</br>

<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>




  <div class="form-group">
    <div class="col-md-4">
    <%= f.label(:email, class: "control-label", for: "inputEmail3") %>
    </div>
    <div class="col-md-8">
    <%= f.email_field(:email, autofocus: true, class: "form-control", placeholder: "Email", id: "inputEmail3") %>
    </div>
  </div>

  </br>
  </br>

  <div class="form-group">
    <div class="col-md-4">
    <%= f.label(:password, class: "control-label", for: "inputPassword3") %>
    </div>
    <div class="col-md-8">
    <%= f.password_field(:password, autocomplete: "off", class: "form-control", placeholder: "Password", id: "inputPassword3") %>
    </div>
  </div>

  </br>
  </br>
  </br>

<% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <div class="col-md-4">
      <%= f.label(:remember_me, class: "control-label", for: "inputCheckBox") %>
    </div>
    <div class="col-md-8">
      <%= f.check_box(:remember_me, id: "inputCheckBox") %>
    </div>
    </div>
  <% end %>

  </br>
  </br>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit("Log in", class: "btn btn-default") %>
    </div>
  </div>
<% end %>

</br>

<%= render "devise/shared/links" %>

</div>
