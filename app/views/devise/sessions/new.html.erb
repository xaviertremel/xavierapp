<div class="signform">

<h2 style="margin-left:14px">Log in</h2>
</br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>




  <div class="form-group">
    <%= f.label(:email, class: "col-sm-2 control-label", for: "inputEmail3") %>
    <div class="col-sm-10">
    <%= f.email_field(:email, autofocus: true, class: "form-control", placeholder: "Email", id: "inputEmail3") %>
    </div>
  </div>

  </br>
  </br>

  <div class="form-group">
    <%= f.label(:password, class: "col-sm-2 control-label", for: "inputPassword3") %>
    <div class="col-sm-10">
    <%= f.password_field(:password, autocomplete: "off", class: "form-control", placeholder: "Password", id: "inputPassword3") %>
    </div>
  </div>

  </br>
  </br>
  </br>

<% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.label(:remember_me, class: "col-sm-2 control-label", for: "inputCheckBox") %>
    <div class="col-sm-10">
      <%= f.check_box(:remember_me, id: "inputCheckBox") %>
    </div>
    </div>
  <% end %>

  </br>
  </br>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit("Log in", class: "btn btn-default") %>
    </div>
  </div>
<% end %>

</br>

<%= render "devise/shared/links" %>

</div>
